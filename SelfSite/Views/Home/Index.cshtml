@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Home Page";
}

@section head
{
    @Styles.Render("~/Content/mainpage.css")
}

@section scripts
{
    @Scripts.Render("~/Scripts/cbpAnimatedHeader.js")
    @Scripts.Render("~/bundles/expertisegrid")
}

<header id="home" class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="~/Content/Images/profile.jpg" alt="">
                <div class="intro-text">
                    <span class="name">Web, Mobile Developer</span>
                    <hr class="thick-light">
                    <span class="skills">Create solutions</span>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Services</h2>
                <hr class="star-primary thick-light">
            </div>
        </div>
        <div class="list-group services-list">
            <div class="col-sm-4 list-group-item clearfix" data-delay="0">
                <i class="col-sm-2 fa fa-desktop fa-2x fa-fw"></i>
                <div class="col-sm-10">
                    <h5><strong>Front-End Web Development</strong></h5>
                    <p>
                        Hands on experience of creating responsive, interactive web pages/single page applications.
                    </p>
                </div>
            </div>
            <div class="col-sm-4 list-group-item" data-delay="200">
                <i class="col-sm-2 fa fa-tasks fa-2x fa-fw"></i>
                <div class="col-sm-10">
                    <h5><strong>Back-End Web Development</strong></h5>
                    <p>
                        Skills in creating reliable, easy-support, stable back-end applications, using relational/NoSQL databases.
                    </p>
                </div>
            </div>
            <div class="col-sm-4 list-group-item" data-delay="400">
                <i class="col-sm-2 fa fa-mobile fa-2x fa-fw"></i>
                <div class="col-sm-10">
                    <h5><strong>Mobile Development</strong></h5>
                    <p>
                        Able to create nice-looking, smooth-feeling application for Android/IOS/Windows Phone platforms using Xamarin.
                    </p>
                </div>
            </div>
        </div>
        <div id="see-portfolio" class="row">
            <div class="col-sm-12 hire-me-button">
                <h4 class="align-center"><strong>HIRE ME NOW</strong></h4>
                <p class="align-center">
                    <a href="#contact" data-type="video" class="scroll-smooth sr-button sr-buttonicon scroll-to"><i class="fa fa-angle-down fa-fw"></i></a>
                </p>
            </div>
        </div>
    </div>
</section>

<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Expertise</h2>
                <hr class="star-primary thick-light">
            </div>
        </div>
        <div id="filters" class="button-group">
            <div>
                <button class="button is-checked" data-filter="*">show all</button>
                <button class="button" data-filter=".back-end">Back-End</button>
                <button class="button" data-filter=".front-end">Front-End</button>
                <button class="button" data-filter=".mobile">Mobile</button>
            </div>
        </div>
        <div class="expretise-grid">
            <div class="expertise-item web front-end expertise-angular" data-category="Front-End">
                <div class="name"><p>AngularJS</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item web back-end expertise-aspnet" data-category="Back-End">
                <div class="name"><p>ASP.NET</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item web back-end expertise-net" data-category="Back-End">
                <div class="name"><p>.NET</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item mobile expertise-xamarin" data-category="Mobile">
                <div class="name"><p>Xamarin</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item web back-end expertise-nodejs" data-category="Back-End">
                <div class="name"><p>NodeJS</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item mobile expertise-ionic" data-category="Mobile">
                <div class="name"><p>Ionic</p></div>
                <p class="date">04112015</p>
            </div>
            <div class="expertise-item web front-end expertise-bootstrap" data-category="Front-End">
                <div class="name"><p>Bootstrap</p></div>
                <p class="date">04112015</p>
            </div>
        </div>
    </div>
</section>


